{
  "compilerOptions": {
    "alwaysStrict": true,
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6","dom"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "config",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "./src/**/__mocks__/",
    "./src/**/__tests__/",
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts"
  ]
}
